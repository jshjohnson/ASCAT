<?xml version="1.0" encoding="UTF-8"?>
<forms version="1.6.7">
	<form labelPlacement="top_label" useCurrentUserAsAuthor="1">
		<title><![CDATA[Make an enquiry]]></title>
		<confirmation type="page">
			<pageId><![CDATA[5]]></pageId>
		</confirmation>
		<button type="text">
			<text><![CDATA[Send message]]></text>
		</button>
		<fields>
			<field id="1" isRequired="1" size="medium" type="name" nameFormat="simple">
				<errorMessage><![CDATA[Please give your name]]></errorMessage>
				<label><![CDATA[Name]]></label>
			</field>
			<field id="2" isRequired="1" size="medium" type="email">
				<cssClass><![CDATA[Please give your email address]]></cssClass>
				<label><![CDATA[Email address]]></label>
			</field>
			<field id="3" isRequired="1" size="medium" type="textarea">
				<errorMessage><![CDATA[Please type your message above]]></errorMessage>
				<label><![CDATA[Your message]]></label>
			</field>
		</fields>
		<descriptionPlacement><![CDATA[below]]></descriptionPlacement>
		<notification>
			<to><![CDATA[{admin_email}]]></to>
			<subject><![CDATA[New Enquiry]]></subject>
			<message><![CDATA[The following person sent a new enquiry on {date_dmy}:

{all_fields}]]></message>
			<fromField><![CDATA[2]]></fromField>
			<fromNameField><![CDATA[1]]></fromNameField>
			<replyToField><![CDATA[2]]></replyToField>
		</notification>
		<autoResponder>
			<toField><![CDATA[2]]></toField>
			<fromName><![CDATA[[CLIENT NAME] ]]></fromName>
			<from><![CDATA[{admin_email}]]></from>
			<replyTo><![CDATA[{admin_email}]]></replyTo>
			<subject><![CDATA[Confirmation]]></subject>
			<message><![CDATA[Dear {Name:1}

Thank you for your enquiry. It has been received and we will get back to you shortly, usually within 24 hours.

Regards

[CLIENT NAME] ]]></message>
		</autoResponder>
	</form>
</forms>